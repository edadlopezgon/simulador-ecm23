# Dockerfile
FROM python:3.9.12
COPY . /usr/src/app
COPY requirements.txt /usr/src/app/requirements.txt
WORKDIR /usr/src/app/
RUN pip install --upgrade pip && \
    pip install -r requirements.txt
CMD ["python", "Simulador_v13.py"]
